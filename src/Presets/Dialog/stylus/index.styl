.popup-dialog
	height 100%
	border-radius 2px
	box-shadow 1px 1px 50px 0 rgba(0, 0, 0, 0.3)
	background-color #FFFFFF
	overflow hidden
.popup-dialog-header
	position relative
	height 40px
	box-sizing border-box
	background-color #F8F8F8
	// box-shadow 0 -3px 5px 0 #000000
	border-bottom 1px solid #EEEEEE
.popup-dialog-title
	height 100%
	padding 0 40px 0 20px
	line-height 40px
	font-size 14px
	white-space nowrap
	text-overflow ellipsis
	overflow hidden
.popup-dialog-close
	position absolute
	top 0
	right 0
	width 40px
	height 40px
	text-align center
	line-height 40px
	cursor pointer
	transition 0.3s
	i.popup-dialog-iconfont
		color #999999
		transition 0.3s
	&:hover
		background-color #ff4444
		i.popup-dialog-iconfont
			color #FFFFFF
.popup-dialog-body
	position relative
	height calc(100% - 40px)
	overflow-y auto
	iframe
		display block
		width 100%
		height 100%
		border 0
		box-sizing border-box
.popup-dialog-loading
	position absolute
	top -30px
	left 50%
	margin-top -15px
	margin-left -15px
	width 30px
	height 30px
	padding 5px
	border-radius 40px
	box-sizing border-box
	background-color rgba(0, 0, 0, 0.3)
	z-index 1
	transition 0.5s
	i.popup-dialog-iconfont
		display block
		line-height 20px
		font-size 20px
		color #FFFFFF
		&:after
			display block
.popup-dialog-loading-show
	top 50px