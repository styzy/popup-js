@import './iconfont.styl'

fade-in(duration = 0.3s)
	animation fadeIn duration linear
	@keyframes fadeIn
		from
			opacity 0
		to
			opacity 1
fade-out(duration = 0.3s)
	animation fadeOut duration linear
	@keyframes fadeOut
		from
			opacity 1
		to
			opacity 0
.popup-fade-in
	fade-in()
.popup-fade-out
	opacity 0
	fade-out()
.popup-masker
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	background-color rgba(0, 0, 0, 0.3)
.popup-container
	position fixed
